# PAW - Phishing Attribution Workbench
# Environment Configuration Template
# Copy this file to .env and fill in your values

# ======================
# ENCRYPTION SETTINGS
# ======================

# REQUIRED: Password for encrypted clicking module
# Generate with: python3 -c 'import secrets; print(secrets.token_urlsafe(32))'
CRYPTO_PASSWORD=

# Path to encrypted vault storage
CRYPTO_VAULT_PATH=/mnt/crypto_vault

# ======================
# PGP SIGNING (Optional)
# ======================

# Path to PGP private key for evidence signing
PAW_PGP_PRIV=

# PGP key passphrase (if encrypted)
PAW_PGP_PASS=

# ======================
# REKOR ANCHORING (Optional)
# ======================

# Rekor server URL for immutable timestamping
PAW_REKOR_URL=https://rekor.sigstore.dev

# Path to Rekor private key (RSA)
PAW_REKOR_PRIVKEY_PEM=

# Path to Rekor public key
PAW_REKOR_PUBKEY_PEM=

# ======================
# CANARY SERVER
# ======================

# SMTP settings for alert emails
PAW_SMTP_SERVER=smtp.gmail.com
PAW_SMTP_PORT=587
PAW_SMTP_USER=
PAW_SMTP_PASS=
PAW_ALERT_EMAIL=

# Canary server port
PAW_CANARY_PORT=8787

# ======================
# THREAT INTELLIGENCE APIs (Optional)
# ======================

# VirusTotal API key
VIRUSTOTAL_API_KEY=

# AbuseIPDB API key
ABUSEIPDB_API_KEY=

# AlienVault OTX API key
ALIENVAULT_OTX_API_KEY=

# ThreatFox API key
THREATFOX_API_KEY=

# ======================
# BROWSER SETTINGS
# ======================

# Chrome binary path (auto-detected if not set)
CHROME_BIN=/usr/bin/google-chrome

# Chromedriver path (auto-detected if not set)
CHROMEDRIVER_PATH=/usr/local/bin/chromedriver

# ======================
# LOGGING
# ======================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
PAW_LOG_LEVEL=INFO

# Log file path
PAW_LOG_FILE=/var/log/paw/paw.log

# ======================
# SECURITY
# ======================

# Enable strict SSL verification (set to 'false' only for testing)
PAW_VERIFY_SSL=true

# Maximum analysis timeout (seconds)
PAW_MAX_TIMEOUT=120

# Enable network isolation for Docker (true/false)
PAW_NETWORK_ISOLATION=true

# ======================
# DATABASE
# ======================

# SQLite database path
PAW_DB_PATH=./cases/index.db

# Enable database encryption (requires sqlcipher)
PAW_DB_ENCRYPTION=false

# ======================
# ADVANCED
# ======================

# Deobfuscation weight in scoring (0.0-1.0)
PAW_DEOB_WEIGHT=0.30

# Scoring profile (default, strict, conservative)
PAW_SCORING_PROFILE=default

# Enable ML-based attribution (requires scikit-learn)
PAW_ENABLE_ML=false

# Worker threads for parallel analysis
PAW_WORKER_THREADS=4
